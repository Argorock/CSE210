using System;

class Menu
{
    public int GetInput()
    {
        Console.Write("Please Choose a number (1-5): ")
        string choice = Console.ReadLine("");
        numChoice = int.Parse(choice)
        return numChoice
    }
    public void DisplayMenu()
    {
        // Console.Write("Please choose an option(1-5): ");
        Console.WriteLine("1. Write");
        Console.WriteLine("2. Display");
        Console.WriteLine("3. Load");
        Console.WriteLine("4. Save");
        Console.WriteLine("5. Quit");
    }
    public void DisplayLogic()
    {
        bool done = false;
        while (done != true)
        {
            DisplayMenu()
            numChoice = GetInput()
            switch (numChoice)
            {
                case 1;
                PromptMan promptMan = new PromptMan();
                Console.WriteLine(PromptMan.GetRandomPrompt(promptMan.prompts));
                break;

                case 2;
                journal
                break;

                case 3;
                journal
                break;

                case 4;
                journal
                break;

                default:
                done = true
            }
        }
    }
}